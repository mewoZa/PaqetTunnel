                    <TextBlock Text="{Binding PaqetVersion}" 
                               FontSize="9.5" VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Foreground="{DynamicResource TextDimBrush}" 
                               FontFamily="{DynamicResource MonoFont}" Opacity="0.5" />
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
