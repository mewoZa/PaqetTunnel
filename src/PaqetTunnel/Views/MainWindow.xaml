<Window x:Class="PaqetTunnel.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PaqetTunnel.ViewModels"
        xmlns:ctrl="clr-namespace:PaqetTunnel.Views.Controls"
        xmlns:h="clr-namespace:PaqetTunnel.Helpers"
        Title="Paqet Tunnel"
        Width="380" Height="620"
        MinWidth="340" MinHeight="480"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Deactivated="Window_Deactivated">

    <Border Background="{DynamicResource BgBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.5" Color="Black" />
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />  <!-- Title bar -->
                <RowDefinition Height="*" />   <!-- Content -->
                <RowDefinition Height="30" />  <!-- Status bar -->
            </Grid.RowDefinitions>

            <!-- â•â•â• TITLE BAR â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="0" Background="Transparent" 
                    CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid Margin="16,0,6,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Â»" FontSize="18" FontWeight="Bold" Margin="0,0,6,1"
                                   VerticalAlignment="Center">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{Binding IsConnected, 
                                    Converter={StaticResource ConnGlowConv}, 
                                    FallbackValue=#58a6ff}" />
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBlock Text="Paqet Tunnel" FontSize="12.5" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center"
                                   FontFamily="{DynamicResource MainFont}" Opacity="0.9" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Content="â”€" Style="{DynamicResource TitleBarButton}" Click="Minimize_Click" />
                        <Button Content="âœ•" Style="{DynamicResource CloseButton}" Click="Close_Click" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- â•â•â• MAIN CONTENT â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Padding="0">
                <StackPanel Margin="16,4,16,8">
                
                    <!-- â”€â”€ Setup Banner â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
                    <Border Style="{DynamicResource Card}"
                            Visibility="{Binding NeedsSetup, Converter={StaticResource BoolToVis}}"
                            BorderBrush="#d29922" Padding="12,10" Margin="0,0,0,6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="âš " FontSize="18" VerticalAlignment="Top" Margin="0,0,10,0"
                                       Foreground="#d29922" />
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="SETUP REQUIRED" FontSize="9.5" FontWeight="Bold"
                                           Foreground="#d29922" Margin="0,0,0,3"
                                           FontFamily="{DynamicResource MainFont}" />
                                <TextBlock Text="{Binding SetupStatus}" Foreground="{DynamicResource TextDimBrush}"
                                           TextWrapping="Wrap" FontSize="11" Margin="0,0,0,6" />
                                <Button Content="Install" Style="{DynamicResource PrimaryButton}"
                                        Command="{Binding RunSetupCommand}"
                                        IsEnabled="{Binding IsSettingUp, Converter={StaticResource InvBoolConv}}"
                                        HorizontalAlignment="Left" Padding="16,5" FontSize="11.5" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <!-- â”€â”€ HERO: Connect Button + Status â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <Grid HorizontalAlignment="Center" Margin="0,8,0,2">
                        <Button Command="{Binding ToggleConnectionCommand}" Cursor="Hand"
                                IsEnabled="{Binding IsConnecting, Converter={StaticResource InvBoolConv}}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid Width="96" Height="96">
                                        <!-- Outer glow -->
                                        <Ellipse Width="96" Height="96">
                                            <Ellipse.Fill>
                                                <RadialGradientBrush>
                                                    <GradientStop Color="{Binding IsConnected, Converter={StaticResource ConnGlowConv}}" Offset="0.3" />
                                                    <GradientStop Color="Transparent" Offset="1" />
                                                </RadialGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <!-- Ring -->
                                        <Ellipse Width="78" Height="78" StrokeThickness="2"
                                                 Stroke="{Binding IsConnected, Converter={StaticResource ConnColorConv}}" />
                                        <!-- Fill -->
                                        <Ellipse Width="72" Height="72" Fill="{DynamicResource SurfaceBrush}" />
                                        <!-- Icon -->
                                        <TextBlock Text="Â»" FontSize="32" FontWeight="Bold"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Margin="2,0,0,2"
                                                   Foreground="{Binding IsConnected, Converter={StaticResource ConnColorConv}}" />
                                        <!-- Spinner -->
                                        <Ellipse x:Name="SpinnerRing" Width="86" Height="86"
                                                 StrokeThickness="1.5" StrokeDashArray="3,6"
                                                 Stroke="{DynamicResource AccentBrush}"
                                                 Visibility="{Binding IsConnecting, Converter={StaticResource BoolToVis}}"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <RotateTransform x:Name="SpinnerRotation" />
                                            </Ellipse.RenderTransform>
                                            <Ellipse.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetName="SpinnerRotation"
                                                                             Storyboard.TargetProperty="Angle"
                                                                             From="0" To="360" Duration="0:0:1.8" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Ellipse.Triggers>
                                        </Ellipse>
                                    </Grid>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <!-- Status text -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,4,0,6">
                        <TextBlock Text="{Binding ConnectionStatus}" 
                                   FontSize="13.5" FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Foreground="{Binding IsConnected, Converter={StaticResource ConnColorConv}}" />
                        <TextBlock Text="{Binding ConnectionTime}" 
                                   FontSize="10.5" 
                                   FontFamily="{DynamicResource MonoFont}"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextDimBrush}"
                                   Visibility="{Binding IsConnected, Converter={StaticResource BoolToVis}}" />
                    </StackPanel>

                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <!-- â”€â”€ LIVE STATS PANEL â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <Border Style="{DynamicResource Card}" Padding="0" Margin="0,0,0,4"
                            Visibility="{Binding IsConnected, Converter={StaticResource BoolToVis}}">
                        <StackPanel>
                            <!-- Speed row -->
                            <Grid Margin="14,10,14,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <!-- Download -->
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock Text="â†“ DOWN" FontSize="9" FontWeight="SemiBold" 
                                               HorizontalAlignment="Center" 
                                               Foreground="{DynamicResource TextDimBrush}"
                                               FontFamily="{DynamicResource MainFont}" />
                                    <TextBlock Text="{Binding DownloadSpeed}" FontSize="15" FontWeight="Bold"
                                               FontFamily="{DynamicResource MonoFont}"
                                               HorizontalAlignment="Center" Margin="0,2,0,0"
                                               Foreground="{DynamicResource AccentBrush}" />
                                </StackPanel>
                                
                                <!-- Center divider + mode badge -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="4" Padding="6,2">
                                        <TextBlock Text="{Binding TunnelMode}" FontSize="8.5" FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{DynamicResource TextDimBrush}"
                                                   FontFamily="{DynamicResource MainFont}" />
                                    </Border>
                                </StackPanel>
                                
                                <!-- Upload -->
                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="â†‘ UP" FontSize="9" FontWeight="SemiBold" 
                                               HorizontalAlignment="Center" 
                                               Foreground="{DynamicResource TextDimBrush}"
                                               FontFamily="{DynamicResource MainFont}" />
                                    <TextBlock Text="{Binding UploadSpeed}" FontSize="15" FontWeight="Bold"
                                               FontFamily="{DynamicResource MonoFont}"
                                               HorizontalAlignment="Center" Margin="0,2,0,0"
                                               Foreground="{DynamicResource SuccessBrush}" />
                                </StackPanel>
                            </Grid>

                            <!-- Speed graph (dual line) -->
                            <ctrl:SpeedGraph Height="64" ClipToBounds="True" Margin="1,0,1,1"
                                             Data="{Binding SpeedHistory}"
                                             DownloadData="{Binding DownloadHistory}"
                                             UploadData="{Binding UploadHistory}" />
                        </StackPanel>
                    </Border>

                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <!-- â”€â”€ INFO PANEL (toggle) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <Border Style="{DynamicResource Card}" Padding="0" Margin="0,0,0,4"
                            Visibility="{Binding IsConnected, Converter={StaticResource BoolToVis}}">
                        <StackPanel>
                            <!-- Toggle header -->
                            <Button Style="{DynamicResource GhostButton}" 
                                    Command="{Binding ToggleInfoPanelCommand}"
                                    HorizontalAlignment="Stretch" Padding="12,7"
                                    HorizontalContentAlignment="Stretch">
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="â„¹" FontSize="11" Margin="0,0,6,0" 
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource AccentBrush}" />
                                        <TextBlock Text="Connection Details" FontSize="11" FontWeight="Medium"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource TextDimBrush}" />
                                    </StackPanel>
                                    <TextBlock FontSize="9" HorizontalAlignment="Right" VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextDimBrush}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                <Setter Property="Text" Value="â–¸" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ShowInfoPanel}" Value="True">
                                                        <Setter Property="Text" Value="â–¾" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Button>

                            <!-- Info details -->
                            <StackPanel Margin="14,0,14,10"
                                        Visibility="{Binding ShowInfoPanel, Converter={StaticResource BoolToVis}}">
                                <!-- Public IP -->
                                <Grid Margin="0,2,0,5">
                                    <TextBlock Text="Public IP" FontSize="10.5" 
                                               Foreground="{DynamicResource TextDimBrush}" VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding PublicIp}" FontSize="11" FontWeight="Medium"
                                               FontFamily="{DynamicResource MonoFont}"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextBrush}" />
                                </Grid>
                                <Border Height="1" Background="{DynamicResource BorderBrush}" Opacity="0.3" Margin="0,0,0,5" />

                                <!-- Server -->
                                <Grid Margin="0,0,0,5">
                                    <TextBlock Text="Server" FontSize="10.5" 
                                               Foreground="{DynamicResource TextDimBrush}" VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding ServerIpDisplay}" FontSize="11" FontWeight="Medium"
                                               FontFamily="{DynamicResource MonoFont}"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextBrush}" />
                                </Grid>
                                <Border Height="1" Background="{DynamicResource BorderBrush}" Opacity="0.3" Margin="0,0,0,5" />

                                <!-- SOCKS Port -->
                                <Grid Margin="0,0,0,5">
                                    <TextBlock Text="SOCKS5 Port" FontSize="10.5" 
                                               Foreground="{DynamicResource TextDimBrush}" VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding SocksPort}" FontSize="11" FontWeight="Medium"
                                               FontFamily="{DynamicResource MonoFont}"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextBrush}" />
                                </Grid>
                                <Border Height="1" Background="{DynamicResource BorderBrush}" Opacity="0.3" Margin="0,0,0,5" />

                                <!-- LAN Sharing Port (visible when sharing enabled) -->
                                <Grid Margin="0,0,0,5" Visibility="{Binding IsProxySharingEnabled, Converter={StaticResource BoolToVis}}">
                                    <TextBlock Text="LAN Sharing" FontSize="10.5" 
                                               Foreground="{DynamicResource TextDimBrush}" VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding SharingInfo}" FontSize="11" FontWeight="Medium"
                                               FontFamily="{DynamicResource MonoFont}"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"
                                               Foreground="{DynamicResource AccentBrush}" />
                                </Grid>

                                <!-- DNS Server -->
                                <Grid Margin="0,0,0,5">
                                    <TextBlock Text="DNS" FontSize="10.5" 
                                               Foreground="{DynamicResource TextDimBrush}" VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding ActiveDns}" FontSize="11" FontWeight="Medium"
                                               FontFamily="{DynamicResource MonoFont}"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextBrush}" />
                                </Grid>
                                <Border Height="1" Background="{DynamicResource BorderBrush}" Opacity="0.3" Margin="0,0,0,5" />

                                <!-- Data transferred -->
                                <Grid Margin="0,0,0,0">
                                    <TextBlock Text="Transferred" FontSize="10.5" 
                                               Foreground="{DynamicResource TextDimBrush}" VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding TotalTransferred}" FontSize="11" FontWeight="Medium"
                                               FontFamily="{DynamicResource MonoFont}"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextBrush}" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <!-- â”€â”€ QUICK TOGGLES â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <Border Style="{DynamicResource Card}" Padding="14,10" Margin="0,0,0,4">
                        <StackPanel>
                            <!-- Full System Tunnel -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="Full System Tunnel" FontSize="12" FontWeight="Medium" />
                                    <TextBlock Text="Route all traffic via TUN adapter" FontSize="10"
                                               Foreground="{DynamicResource TextDimBrush}" Margin="0,2,0,0" />
                                </StackPanel>
                                <ToggleButton Grid.Column="1" Style="{DynamicResource ToggleSwitch}"
                                              IsChecked="{Binding IsFullSystemTunnel, Mode=OneWay}"
                                              Command="{Binding ToggleFullSystemTunnelCommand}"
                                              VerticalAlignment="Center" />
                            </Grid>

                            <Border Height="1" Background="{DynamicResource BorderBrush}" Opacity="0.3" Margin="0,0,0,10" />

                            <!-- Auto-Connect -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="Auto-Connect" FontSize="12" FontWeight="Medium" />
                                    <TextBlock Text="Connect on app launch" FontSize="10"
                                               Foreground="{DynamicResource TextDimBrush}" Margin="0,2,0,0" />
                                </StackPanel>
                                <ToggleButton Grid.Column="1" Style="{DynamicResource ToggleSwitch}"
                                              IsChecked="{Binding IsAutoConnect, Mode=OneWay}"
                                              Command="{Binding ToggleAutoConnectCommand}"
                                              VerticalAlignment="Center" />
                            </Grid>

                            <Border Height="1" Background="{DynamicResource BorderBrush}" Opacity="0.3" Margin="0,0,0,10" />

                            <!-- Start with Windows -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Start with Windows" FontSize="12" FontWeight="Medium"
                                           VerticalAlignment="Center" />
                                <ToggleButton Grid.Column="1" Style="{DynamicResource ToggleSwitch}"
                                              IsChecked="{Binding IsAutoStartEnabled, Mode=OneWay}"
                                              Command="{Binding ToggleAutoStartCommand}"
                                              IsEnabled="{Binding IsBusy, Converter={StaticResource InvBoolConv}}"
                                              VerticalAlignment="Center" />
                            </Grid>

                            <!-- Start Before Logon -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="Start Before Logon" FontSize="12" FontWeight="Medium" />
                                    <TextBlock Text="Run tunnel at system boot" FontSize="10"
                                               Foreground="{DynamicResource TextDimBrush}" Margin="0,2,0,0" />
                                </StackPanel>
                                <ToggleButton Grid.Column="1" Style="{DynamicResource ToggleSwitch}"
                                              IsChecked="{Binding IsStartBeforeLogonEnabled, Mode=OneWay}"
                                              Command="{Binding ToggleStartBeforeLogonCommand}"
                                              IsEnabled="{Binding IsBusy, Converter={StaticResource InvBoolConv}}"
                                              VerticalAlignment="Center" />
                            </Grid>

                            <Border Height="1" Background="{DynamicResource BorderBrush}" Opacity="0.3" Margin="0,0,0,10" />

                            <!-- System Proxy -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="System Proxy" FontSize="12" FontWeight="Medium" />
                                    <TextBlock Text="Set browser SOCKS5 proxy" FontSize="10"
                                               Foreground="{DynamicResource TextDimBrush}" Margin="0,2,0,0" />
                                </StackPanel>
                                <ToggleButton Grid.Column="1" Style="{DynamicResource ToggleSwitch}"
                                              IsChecked="{Binding IsSystemProxyEnabled, Mode=OneWay}"
                                              Command="{Binding ToggleSystemProxyCommand}"
                                              IsEnabled="{Binding IsBusy, Converter={StaticResource InvBoolConv}}"
                                              VerticalAlignment="Center" />
                            </Grid>

                            <Border Height="1" Background="{DynamicResource BorderBrush}" Opacity="0.3" Margin="0,0,0,10" />

                            <!-- LAN Sharing -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="LAN Sharing" FontSize="12" FontWeight="Medium"
                                           VerticalAlignment="Center" />
                                <ToggleButton Grid.Column="1" Style="{DynamicResource ToggleSwitch}"
                                              IsChecked="{Binding IsProxySharingEnabled, Mode=OneWay}"
                                              Command="{Binding ToggleProxySharingCommand}"
                                              IsEnabled="{Binding IsBusy, Converter={StaticResource InvBoolConv}}"
                                              VerticalAlignment="Center" />
                            </Grid>

                            <Border Height="1" Background="{DynamicResource BorderBrush}" Opacity="0.3" Margin="0,0,0,10" />

                            <!-- DNS Provider -->
                            <TextBlock Text="DNS" FontSize="12" FontWeight="Medium" Margin="0,0,0,6" />
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <ComboBox SelectedValue="{Binding SelectedDnsProvider}" 
                                          SelectedValuePath="Tag"
                                          SelectionChanged="DnsProviderChanged"
                                          FontSize="11" Padding="6,4" MinWidth="130">
                                    <ComboBoxItem Content="Auto (Fastest)" Tag="auto" />
                                    <ComboBoxItem Content="Cloudflare (1.1.1.1)" Tag="cloudflare" />
                                    <ComboBoxItem Content="Google (8.8.8.8)" Tag="google" />
                                    <ComboBoxItem Content="Quad9 (9.9.9.9)" Tag="quad9" />
                                    <ComboBoxItem Content="OpenDNS" Tag="opendns" />
                                    <ComboBoxItem Content="AdGuard" Tag="adguard" />
                                    <ComboBoxItem Content="AdGuard Family" Tag="adguard-family" />
                                    <ComboBoxItem Content="Cloudflare Malware" Tag="cloudflare-malware" />
                                    <ComboBoxItem Content="Cloudflare Family" Tag="cloudflare-family" />
                                    <ComboBoxItem Content="NextDNS" Tag="nextdns" />
                                    <ComboBoxItem Content="CleanBrowsing" Tag="cleanbrowsing-security" />
                                    <ComboBoxItem Content="CleanBrowsing Family" Tag="cleanbrowsing-family" />
                                    <ComboBoxItem Content="DNS.SB" Tag="dns.sb" />
                                    <ComboBoxItem Content="Comodo Secure" Tag="comodo" />
                                    <ComboBoxItem Content="Verisign" Tag="verisign" />
                                    <ComboBoxItem Content="Level3/Lumen" Tag="level3" />
                                    <ComboBoxItem Content="Control D" Tag="controld" />
                                    <ComboBoxItem Content="Mullvad" Tag="mullvad" />
                                    <ComboBoxItem Content="Custom" Tag="custom" />
                                </ComboBox>
                                <Button Grid.Column="1" Content="âš¡ Benchmark"
                                        Command="{Binding BenchmarkDnsCommand}"
                                        Style="{DynamicResource GhostButton}"
                                        FontSize="10" Padding="8,4" Margin="6,0,0,0" />
                            </Grid>
                            <TextBlock Text="{Binding ActiveDns}" FontSize="10" 
                                       Foreground="{DynamicResource TextDimBrush}" Margin="0,2,0,0" />
                            <TextBlock Text="{Binding DnsStatus}" FontSize="9.5" Margin="0,2,0,4"
                                       Foreground="{DynamicResource AccentBrush}"
                                       Visibility="{Binding DnsStatus, Converter={StaticResource StringToVis}}" />

                            <Border Height="1" Background="{DynamicResource BorderBrush}" Opacity="0.3" Margin="0,4,0,10" />

                            <!-- Theme -->
                            <TextBlock Text="Theme" FontSize="12" FontWeight="Medium" Margin="0,0,0,6" />
                            <ComboBox SelectedValue="{Binding SelectedTheme}" 
                                      SelectedValuePath="Tag"
                                      SelectionChanged="ThemeChanged"
                                      FontSize="11" Padding="6,4" Margin="0,0,0,10">
                                <ComboBoxItem Content="ðŸŒ‘ Dark" Tag="dark" />
                                <ComboBoxItem Content="â˜€ï¸ Light" Tag="light" />
