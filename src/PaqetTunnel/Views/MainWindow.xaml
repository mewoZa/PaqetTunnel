<Window x:Class="PaqetTunnel.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PaqetTunnel.ViewModels"
        xmlns:ctrl="clr-namespace:PaqetTunnel.Views.Controls"
        xmlns:h="clr-namespace:PaqetTunnel.Helpers"
        Title="Paqet Tunnel"
        Width="380" Height="620"
        MinWidth="340" MinHeight="480"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Deactivated="Window_Deactivated">

    <Border Background="{DynamicResource BgBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.5" Color="Black" />
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />  <!-- Title bar -->
                <RowDefinition Height="Auto" /> <!-- Update bar -->
                <RowDefinition Height="*" />   <!-- Content -->
                <RowDefinition Height="30" />  <!-- Status bar -->
            </Grid.RowDefinitions>

            <!-- â•â•â• TITLE BAR â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="0" Background="Transparent" 
                    CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseDown">
                <!-- Accent glow when update available -->
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsUpdateAvailable}" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#1A3B82F6" Offset="0" />
                                            <GradientStop Color="#0D3B82F6" Offset="0.5" />
                                            <GradientStop Color="#1A3B82F6" Offset="1" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid Margin="16,0,6,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Viewbox Width="16" Height="16" Margin="0,0,7,0" VerticalAlignment="Center">
                            <Canvas Width="32" Height="32">
                                <!-- Motion dots (increasing opacity) -->
                                <Ellipse Canvas.Left="1" Canvas.Top="13.5" Width="3" Height="3"
                                         Fill="{DynamicResource AccentBrush}" Opacity="0.3"/>
                                <Ellipse Canvas.Left="5" Canvas.Top="13" Width="3.5" Height="3.5"
                                         Fill="{DynamicResource AccentBrush}" Opacity="0.6"/>
                                <Ellipse Canvas.Left="9.5" Canvas.Top="12.5" Width="4" Height="4"
                                         Fill="{DynamicResource AccentBrush}" Opacity="1"/>
                                <!-- Double chevron >> -->
                                <Polyline Points="15,6 23,16 15,26"
                                          Stroke="{DynamicResource AccentBrush}"
                                          StrokeThickness="2.8" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round"/>
                                <Polyline Points="22,6 30,16 22,26"
                                          Stroke="{DynamicResource AccentBrush}"
                                          StrokeThickness="2.8" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Paqet Tunnel" FontSize="12.5" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center"
                                   FontFamily="{DynamicResource MainFont}" Opacity="0.9" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Content="â”€" Style="{DynamicResource TitleBarButton}" Click="Minimize_Click" />
                        <Button Content="âœ•" Style="{DynamicResource CloseButton}" Click="Close_Click" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- â•â•â• UPDATE NOTIFICATION BAR â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="1" ClipToBounds="True">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="MaxHeight" Value="0" />
                        <Setter Property="Opacity" Value="0" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsUpdateAvailable}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="MaxHeight"
                                                             From="0" To="80" Duration="0:0:0.35">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             From="0" To="1" Duration="0:0:0.3" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="MaxHeight"
                                                             To="0" Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Border Background="#183B82F6" Padding="14,7">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â¬†" FontSize="11" Foreground="#60A5FA" 
                                           VerticalAlignment="Center" Margin="0,0,6,0" />
                                <TextBlock FontSize="11.5" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Update available" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsUpdating}" Value="True">
                                                    <Setter Property="Text" Value="Updating..." />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding UpdateRemoteSha}" FontSize="9.5" 
                                           Foreground="{DynamicResource TextDimBrush}"
                                           FontFamily="{DynamicResource MonoFont}"
                                           VerticalAlignment="Center" Margin="8,0,0,0"
                                           Visibility="{Binding IsUpdating, Converter={StaticResource InvBoolToVis}}" />
                            </StackPanel>
                            <TextBlock FontSize="9.5" Foreground="{DynamicResource TextDimBrush}" 
                                       Margin="0,2,0,0" TextTrimming="CharacterEllipsis">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding UpdateCommitMessage}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsUpdating}" Value="True">
                                                <Setter Property="Text" Value="{Binding UpdateProgressText}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"
                                    Visibility="{Binding IsUpdating, Converter={StaticResource InvBoolToVis}}">
                            <Button Content="Install" Style="{DynamicResource PrimaryButton}"
                                    Command="{Binding InstallUpdateAsyncCommand}"
                                    Padding="14,5" FontSize="10.5" Margin="0,0,4,0" />
                            <Button Content="âœ•" Style="{DynamicResource GhostButton}"
                                    Command="{Binding DismissUpdateCommand}"
                                    Padding="6,4" FontSize="10" Opacity="0.6" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"
                                    Visibility="{Binding IsUpdating, Converter={StaticResource BoolToVis}}">
                            <Ellipse Width="14" Height="14" StrokeThickness="2"
                                     Stroke="#60A5FA" StrokeDashArray="3,2"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="UpdateSpinRotation" />
                                </Ellipse.RenderTransform>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetName="UpdateSpinRotation"
                                                                 Storyboard.TargetProperty="Angle"
                                                                 From="0" To="360" Duration="0:0:1.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                        </StackPanel>
                    </Grid>
                </Border>
            </Border>

            <!-- â•â•â• MAIN CONTENT â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Hidden" Padding="0">
                <StackPanel Margin="16,4,16,8">
                
                    <!-- â”€â”€ Setup Banner â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
                    <Border Style="{DynamicResource Card}"
                            Visibility="{Binding NeedsSetup, Converter={StaticResource BoolToVis}}"
                            BorderBrush="#d29922" Padding="12,10" Margin="0,0,0,6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="âš " FontSize="18" VerticalAlignment="Top" Margin="0,0,10,0"
                                       Foreground="#d29922" />
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="SETUP REQUIRED" FontSize="9.5" FontWeight="Bold"
                                           Foreground="#d29922" Margin="0,0,0,3"
                                           FontFamily="{DynamicResource MainFont}" />
                                <TextBlock Text="{Binding SetupStatus}" Foreground="{DynamicResource TextDimBrush}"
                                           TextWrapping="Wrap" FontSize="11" Margin="0,0,0,6" />
                                <Button Content="Install" Style="{DynamicResource PrimaryButton}"
                                        Command="{Binding RunSetupCommand}"
                                        IsEnabled="{Binding IsSettingUp, Converter={StaticResource InvBoolConv}}"
                                        HorizontalAlignment="Left" Padding="16,5" FontSize="11.5" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <!-- â”€â”€ HERO: Connect Button + Status â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <Grid HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Command="{Binding ToggleConnectionCommand}" Cursor="Hand"
                                IsEnabled="{Binding IsConnecting, Converter={StaticResource InvBoolConv}}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid Width="130" Height="130">

                                        <!-- Layer 1: Ambient glow (breathes continuously â€” color is transparent when disconnected) -->
                                        <Ellipse x:Name="AmbientGlow" Width="130" Height="130">
                                            <Ellipse.Fill>
                                                <RadialGradientBrush>
                                                    <GradientStop Color="{Binding IsConnected, Converter={StaticResource ConnGlowConv}}" Offset="0.2" />
                                                    <GradientStop Color="Transparent" Offset="1" />
                                                </RadialGradientBrush>
                                            </Ellipse.Fill>
                                            <Ellipse.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                            <DoubleAnimation Storyboard.TargetName="AmbientGlow"
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             From="0.4" To="1" Duration="0:0:2" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Ellipse.Triggers>
                                        </Ellipse>

                                        <!-- Layer 2: Outer orbit ring (decorative dots, always visible) -->
                                        <Ellipse x:Name="OrbitRing" Width="118" Height="118"
                                                 StrokeThickness="0.8" StrokeDashArray="1,8"
                                                 Stroke="{DynamicResource TextDimBrush}" Opacity="0.25"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <RotateTransform x:Name="OrbitRotation" />
                                            </Ellipse.RenderTransform>
                                            <Ellipse.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetName="OrbitRotation"
                                                                             Storyboard.TargetProperty="Angle"
                                                                             From="0" To="360" Duration="0:0:20" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Ellipse.Triggers>
                                        </Ellipse>

                                        <!-- Layer 3: Outer ring (colored border) -->
                                        <Ellipse Width="104" Height="104" StrokeThickness="2"
                                                 Stroke="{Binding IsConnected, Converter={StaticResource ConnColorConv}}"
                                                 Opacity="0.6" />

                                        <!-- Layer 4: Inner ring (thicker accent) -->
                                        <Ellipse Width="96" Height="96" StrokeThickness="2.5"
                                                 Stroke="{Binding IsConnected, Converter={StaticResource ConnColorConv}}" />

                                        <!-- Layer 5: Button fill with subtle gradient -->
                                        <Ellipse Width="88" Height="88">
                                            <Ellipse.Fill>
                                                <LinearGradientBrush StartPoint="0.3,0" EndPoint="0.7,1">
                                                    <GradientStop Color="{DynamicResource SurfaceColor}" Offset="0" />
                                                    <GradientStop Color="{DynamicResource CardColor}" Offset="1" />
                                                </LinearGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <!-- Layer 6: Power icon (proper vector) -->
                                        <Viewbox Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Canvas Width="24" Height="24">
                                                <!-- Power stem (vertical line at top center) -->
                                                <Line X1="12" Y1="2" X2="12" Y2="11"
                                                      Stroke="{Binding IsConnected, Converter={StaticResource ConnColorConv}}"
                                                      StrokeThickness="2.2" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                                <!-- Power arc (gap at top, opens upward) -->
                                                <Path Stroke="{Binding IsConnected, Converter={StaticResource ConnColorConv}}"
                                                      StrokeThickness="2.2" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                                                      Data="M 7.5,8 A 6.5,6.5 0 1 0 16.5,8" />
                                            </Canvas>
                                        </Viewbox>

                                        <!-- Layer 7: Connecting spinner (multi-ring) -->
                                        <Ellipse x:Name="SpinnerRing" Width="110" Height="110"
                                                 StrokeThickness="1.8" StrokeDashArray="4,6"
                                                 Stroke="{DynamicResource AccentBrush}"
                                                 Visibility="{Binding IsConnecting, Converter={StaticResource BoolToVis}}"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <RotateTransform x:Name="SpinnerRotation" />
                                            </Ellipse.RenderTransform>
                                            <Ellipse.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetName="SpinnerRotation"
                                                                             Storyboard.TargetProperty="Angle"
                                                                             From="0" To="360" Duration="0:0:1.5" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Ellipse.Triggers>
                                        </Ellipse>

                                        <!-- Layer 8: Second spinner (counter-rotate, wider dash) -->
                                        <Ellipse Width="122" Height="122"
                                                 StrokeThickness="1" StrokeDashArray="2,12"
                                                 Stroke="{DynamicResource AccentBrush}" Opacity="0.5"
                                                 Visibility="{Binding IsConnecting, Converter={StaticResource BoolToVis}}"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <RotateTransform x:Name="SpinnerRotation2" />
                                            </Ellipse.RenderTransform>
                                            <Ellipse.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetName="SpinnerRotation2"
                                                                             Storyboard.TargetProperty="Angle"
                                                                             From="360" To="0" Duration="0:0:2.5" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Ellipse.Triggers>
                                        </Ellipse>

                                        <!-- Hover highlight (inside button fill) -->
                                        <Ellipse x:Name="HoverOverlay" Width="88" Height="88"
                                                 Opacity="0" IsHitTestVisible="False">
                                            <Ellipse.Fill>
                                                <RadialGradientBrush>
                                                    <GradientStop Color="#18FFFFFF" Offset="0" />
                                                    <GradientStop Color="Transparent" Offset="1" />
                                                </RadialGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </Grid>

                                    <ControlTemplate.Triggers>
                                        <!-- Hover: subtle highlight -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="HoverOverlay"
                                                                         Storyboard.TargetProperty="Opacity"
                                                                         To="1" Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="HoverOverlay"
                                                                         Storyboard.TargetProperty="Opacity"
                                                                         To="0" Duration="0:0:0.3" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <!-- Status area: pill badge + timer -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,6,0,6">
                        <!-- Status pill -->
                        <Border HorizontalAlignment="Center" CornerRadius="12" Padding="14,4,14,5"
                                Margin="0,0,0,3">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="{DynamicResource CardColor}" />
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Setter Property="BorderBrush">
                                        <Setter.Value>
                                            <SolidColorBrush Color="{DynamicResource BorderColor}" />
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- Status dot -->
                                <Ellipse Width="7" Height="7" Margin="0,1,7,0" VerticalAlignment="Center"
                                         Fill="{Binding IsConnected, Converter={StaticResource ConnColorConv}}" />
                                <TextBlock Text="{Binding ConnectionStatus}" 
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{Binding IsConnected, Converter={StaticResource ConnColorConv}}" />
                            </StackPanel>
                        </Border>
                        <!-- Timer -->
                        <TextBlock Text="{Binding ConnectionTime}" 
                                   FontSize="10.5" 
                                   FontFamily="{DynamicResource MonoFont}"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextDimBrush}"
                                   Visibility="{Binding IsConnected, Converter={StaticResource BoolToVis}}" />
                    </StackPanel>

                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <!-- â”€â”€ INTERNET HEALTH STRIP â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <Border CornerRadius="8" Padding="10,5" Margin="0,0,0,4"
                            Visibility="{Binding IsConnected, Converter={StaticResource BoolToVis}}">
                        <Border.Background>
                            <SolidColorBrush Color="{DynamicResource CardColor}" />
                        </Border.Background>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Latency badge -->
                            <Border Grid.Column="0" CornerRadius="4" Padding="6,2" Margin="0,0,6,0"
                                    Background="{DynamicResource SurfaceBrush}">
                                <TextBlock FontSize="10" FontFamily="{DynamicResource MonoFont}"
                                           Foreground="{DynamicResource TextDimBrush}">
                                    <Run Text="â†”" /><Run Text=" " /><Run Text="{Binding ServerLatency}" />
                                </TextBlock>
                            </Border>

                            <!-- Internet status -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,4,0">
                                <Ellipse Width="6" Height="6" Margin="0,0,5,0" VerticalAlignment="Center"
                                         Fill="{Binding InternetStatusColor, Converter={StaticResource StringToBrush}}" />
                                <TextBlock Text="{Binding InternetStatus}" FontSize="10.5" FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Foreground="{Binding InternetStatusColor, Converter={StaticResource StringToBrush}}" />
                            </StackPanel>

                            <!-- Spacer -->
                            <TextBlock Grid.Column="2" />

                            <!-- Recheck button -->
                            <Button Grid.Column="3" Content="â†»" ToolTip="Check internet"
                                    Command="{Binding CheckInternetCommand}"
                                    Style="{DynamicResource GhostButton}"
                                    Padding="5,2" FontSize="12" Opacity="0.6" Margin="0,0,2,0" />

                            <!-- Repair button -->
                            <Button Grid.Column="4" ToolTip="Repair connection (flush DNS + restart tunnel)"
                                    Command="{Binding RepairConnectionCommand}"
                                    IsEnabled="{Binding IsRepairing, Converter={StaticResource InvBoolConv}}"
                                    Style="{DynamicResource GhostButton}"
                                    Padding="5,2" FontSize="11" Opacity="0.6">
                                <Button.Content>
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="ðŸ”§" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsRepairing}" Value="True">
                                                        <Setter Property="Text" Value="â³" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Button.Content>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <!-- â”€â”€ LIVE STATS PANEL â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <Border Style="{DynamicResource Card}" Padding="0" Margin="0,0,0,4"
                            Visibility="{Binding IsConnected, Converter={StaticResource BoolToVis}}">
                        <StackPanel>
                            <!-- Speed row -->
                            <Grid Margin="14,10,14,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <!-- Download -->
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
